<UserControl x:Class="DialogWorkspaceSample.SampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Label Margin="4" Target="{Binding ElementName=FirstNameTextBox}" Grid.Row="0" Grid.Column="0">_First name:</Label>
        <TextBox Grid.Row="0" Margin="0,4,4,4" Grid.Column="1" x:Name="FirstNameTextBox"/>
        <Label Margin="4" Target="{Binding ElementName=LastNameTextBox}" Grid.Row="1" Grid.Column="0">_Last name:</Label>
        <TextBox Grid.Row="1" Margin="0,4,4,4" Grid.Column="1" x:Name="LastNameTextBox"/>
    </Grid>
</UserControl>
