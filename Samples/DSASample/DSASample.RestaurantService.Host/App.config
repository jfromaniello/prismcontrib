<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <!-- Before deployment, you should remove the returnFaults behavior configuration to avoid disclosing information in exception messages -->
      <service name="RestaurantService.Host.MenuService" behaviorConfiguration="returnFaults">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8731/RestaurantService.Host/MenuService" />
          </baseAddresses>
        </host>
        <!-- Service Endpoints -->
        <endpoint address ="" binding="wsHttpBinding" contract="RestaurantService.Host.IMenuService">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="returnFaults">
          <serviceMetadata httpGetEnabled="True" httpGetUrl=""/>
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>
